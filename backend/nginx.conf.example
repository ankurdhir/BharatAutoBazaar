user  www-data;
worker_processes  auto;
pid /run/nginx.pid;

events { worker_connections 1024; }

http {
  include       mime.types;
  default_type  application/octet-stream;
  sendfile        on;
  keepalive_timeout  65;
  server_tokens off;

  upstream app_server {
    # Match gunicorn bind in production (e.g., 127.0.0.1:8001)
    server 127.0.0.1:8001;
  }

  # Catch-all: drop unknown Host headers so they never reach Django
  server {
    listen 80 default_server;
    listen [::]:80 default_server;
    return 444;
  }

  # Redirect plain HTTP to HTTPS for your API host
  server {
    listen 80;
    listen [::]:80;
    server_name api.bharatauttobazaar.com;
    return 301 https://$host$request_uri;
  }

  # HTTPS vhost for the API
  server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name api.bharatauttobazaar.com;

    # ssl_certificate     /etc/letsencrypt/live/api.bharatauttobazaar.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/api.bharatauttobazaar.com/privkey.pem;

    # Static files
    location /static/ {
      alias /opt/app/backend/staticfiles/;  # run collectstatic to here
      access_log off;
      expires 30d;
      add_header Cache-Control "public";
    }

    # Media files
    location /media/ {
      alias /opt/app/backend/media/;
      access_log off;
    }

    # Proxy to gunicorn
    location / {
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_pass http://app_server;
      client_max_body_size 50M;
    }
  }
}


